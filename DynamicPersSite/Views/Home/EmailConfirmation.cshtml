@{
    ViewData["Title"] = "Email Confirmation";
    ViewData["BodyClass"] = "page-portfolio";
}

@model DynamicPersSite.Models.ContactViewModel

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/assets/img/alvaro-serrano-hjwKMkehBco-unsplash.jpg');">
        <div class="container position-relative d-flex flex-column align-items-center">

            <h2>Contact</h2>
            <ol>
                <li><a href="/">Home</a></li>
                
            </ol>

        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->


    <section id="contact" class="contact">

        <div class="row text-center">

            <div class="col-lg-12" data-aos="fade-up" data-aos-delay="100">

                <div class="row justify-content-center">

                    <div class="col-md-6">
                        
                        <div class="info-item">
                            
                            <h3 style="color: #1c88ba; font-size: 50px;">Message Sent!</h3>
                            <p style="font-size: 20px;">
                                Thank you for reaching out! <br />
                                I will respond to your message using the provided email address, @Model.Email, in the next 1-3 business days.
                            </p>

                            <br />

                            
                            <p style="font-size: 20px;>
                                You sent the following message on
                                @DateTime.Now.Date.ToShortDateString() at
                                @DateTime.Now.ToShortTimeString() :
                            </p>
                            

                            <br />

                            
                            <p style="font-size: 20px;>
                                <em>@Model.Message</em>
                            </p>
                            

                        </div>

                    </div>

                </div>
                

            </div><!-- End Contact Form -->

         </div>

     </section><!-- End Contact Section -->

</main><!-- End #main -->